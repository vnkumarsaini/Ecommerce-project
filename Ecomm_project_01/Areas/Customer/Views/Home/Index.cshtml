@model IEnumerable<Ecomm_project_01.Models.Product>   
   <div class="row">
   
 <style>
     .height{
         height:200px;
     }
     .cardheight{
         height:400px;
     }
     .cardwidth{
         width:180px;
     }
     .width{
         width:230px;
     }
 </style>
       
    @foreach (var product in Model)
{
    
   <div class="col-lg-3 col-md-6">
            <div class="row p-2">
                <div class="col-12  p-1" style="border:1px solid #008cba; border-radius: 5px;">
                    <div class="card cardheight cardwidth" style="border:0px;">
                <img src="@product.ImageUrl" class="height width card-img-top rounded" />
                        <div class="pl-1">
                 <p class="card-title h5"><b style="color:#2c3e50">@product.Title</b></p>
                 <p class="card-title text-primary">by <b>@product.Author</b></p>
                 <p class="text-info card-title"><b>Sold: @product.SoldCount</b> </p>
                </div>
                        <div style="padding-left:5px;">
                    <p>List Price: <strike><b class="">$@product.ListPrice.ToString("0.00")</b></strike></p>
                </div>
                        <div style="padding-left:5px;">
                    <p style="color:maroon">As low as: <b class="">$@product.Price100.ToString("0.00")</b></p>
                </div>
            </div>
                    <div>
                <a asp-action="Details" class="btn btn-primary form-control" asp-route-id="@product.Id">Details</a>
            </div>
        </div>
    </div>
</div> 
}    
</div>


